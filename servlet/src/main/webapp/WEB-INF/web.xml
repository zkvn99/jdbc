<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0">
  <!-- 서블릿을 서블릿 컨테이너에 등록 -->
  <servlet>
    <servlet-name>xml-mapping</servlet-name>
    <servlet-class>org.beyond.servlet.lifecycle.xml.LifeCycleTest</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <!-- 등록 된 서블릿을 주소와 연결 (매핑) -->
  <servlet-mapping>
    <servlet-name>xml-mapping</servlet-name>
    <url-pattern>/xml-lifecycle</url-pattern>
  </servlet-mapping>
  <!-- 프로젝트 내부에 404 or 500 에러가 발생
  /showErrorPage 를 요청하도록 설정 -->
  <error-page>
    <error-code>404</error-code>
    <location>/showErrorPage</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/showErrorPage</location>
  </error-page>
</web-app>